{
	"format_version": "1.16.100",
	"minecraft:block": {
		"description": {
			"identifier": "terra:poplar_wood",
			"register_to_creative_menu": true,
			"is_experimental": false,
			"properties": {
				"terra:facing_direction": [
					0,
					1,
					2
				],
				"terra:wood_stripped": [
					0,
					1
				]
			}
		},
		"permutations": [
			{
				"condition": "q.block_property('terra:facing_direction') == 0",
				"components": {
					"minecraft:rotation": [
						0,
						0,
						0
					]
				}
			},
			{
				"condition": "q.block_property('terra:facing_direction') == 1",
				"components": {
					"minecraft:rotation": [
						90,
						0,
						0
					]
				}
			},
			{
				"condition": "q.block_property('terra:facing_direction') == 2",
				"components": {
					"minecraft:rotation": [
						0,
						0,
						90
					]
				}
			},
			{
				"condition": "q.block_property('terra:wood_stripped') == 0",
				"components": {
					"minecraft:material_instances": {
						"*": {
							"texture": "poplar_log_side",
							"render_method": "opaque"
						}
					},
					"minecraft:on_interact": {
						"event": "terra:turn_into_stripped",
						"target": "self",
						"condition": "query.equipped_item_any_tag('slot.weapon.mainhand','minecraft:is_axe')"
					},
					"minecraft:loot": "loot_tables/blocks/poplar_wood.json"
				}
			},
			{
				"condition": "q.block_property('terra:wood_stripped') == 1",
				"components": {
					"minecraft:material_instances": {
						"*": {
							"texture": "stripped_poplar_log_side",
							"render_method": "opaque"
						}
					},
					"minecraft:loot": "loot_tables/blocks/poplar_wood_stripped.json"
				}
			}
		],
		"components": {
			"tag:cer:solid_block": {},
			"tag:wood": {},
			"minecraft:geometry": "minecraft:geometry.full_block",
			"minecraft:creative_category": {
				"category": "nature",
				"group": "itemGroup.name.log"
			},
			"minecraft:material_instances": {
				"*": {
					"texture": "poplar_log_side",
					"render_method": "opaque"
				}
			},
			"minecraft:destroy_time": 0.5,
			"minecraft:explosion_resistance": 3,
			"minecraft:loot": "loot_tables/blocks/poplar_wood.json",
			"minecraft:map_color": "#8A9457",
			"minecraft:flammable": {
				"flame_odds": 5,
				"burn_odds": 5
			},
			"minecraft:on_player_placing": {
				"event": "terra:set_facing_direction"
			}
		},
		"events": {
			"terra:set_facing_direction": {
				"set_block_property": {
					"terra:facing_direction": "math.floor(query.block_face/2)"
				}
			},
			"terra:turn_into_stripped": {
				"sequence": [
					{
						"run_command": {
							"command": [
								"playsound use.wood @a ~~~ 1 0.8"
							],
							"target": "other"
						},
						"set_block_property": {
							"terra:wood_stripped": "q.block_property('terra:wood_stripped')+1"
						}
					}
				]
			}
		}
	}
}