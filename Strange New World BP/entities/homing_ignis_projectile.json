{
    "format_version": "1.20.0",
    "minecraft:entity": {
        "description": {
            "identifier": "terra:homing_ignis_projectile",
            "is_spawnable": false,
            "is_summonable": true,
            "runtime_identifier": "arrow"
        },
        "component_groups": {
            "despawn": {
                "minecraft:instant_despawn": {
                    "remove_child_entities": true
                }
            }
        },
        "components": {
            "minecraft:collision_box": {
                "width": 0.25,
                "height": 0.25
            },
            "minecraft:projectile": {
                "on_hit": {
                    "definition_event": {
                        "event_trigger": {
                            "event": "projectile_hit",
                            "target": "other"
                        }
                    },
                    "remove_on_hit": {},
                    "impact_damage": {
                        "damage": 5,
                        "knockback": true,
                        "semi_random_diff_damage": false
                    }
                },
                "homing": true,
                "shoot_target": true,
                "power": 91,
                "gravity": 0,
                "anchor": 2,
                "angle_offset": 0.0,
                "offset": [
                    0,
                    -0.1,
                    0
                ],
                "semi_random_diff_damage": true,
                "uncertainty_base": 2,
                "reflect_on_hurt": true,
                "hit_sound": "mob.blaze.shoot",
                "liquid_inertia": 0.1,
                "catch_fire": true
            },
            "minecraft:physics": {
                "has_collision": true
            },
            "minecraft:environment_sensor": {
                "triggers": [
                    {
                        "filters": {
                            "test": "in_water",
                            "value": true,
                            "subject": "self"
                        },
                        "event": "despawn"
                    }
                ]
            },
            "minecraft:timer": {
                "time": [
                    5,
                    10
                ],
                "time_down_event": {
