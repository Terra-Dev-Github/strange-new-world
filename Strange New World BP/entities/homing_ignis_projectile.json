            "projectile_hit": {
                "sequence": [
                    {
                        "queue_command": {
                            "target": "other",
                            "command": [
                                "particle terra:ignis_blast_particle ~~~",
                                "fill ~-1 ~ ~-1 ~1 ~2 ~1 fire 0 replace air 0",
                                "fill ~-1 ~ ~-1 ~1 ~2 ~1 fire 0 replace snow_layer",
                                "fill ~-1 ~ ~-1 ~1 ~2 ~1 fire 0 replace short_grass",
                                "fill ~-1 ~ ~-1 ~1 ~2 ~1 fire 0 replace tall_grass",
                                "fill ~-1 ~ ~-1 ~1 ~2 ~1 fire 0 replace deadbush"
                            ]
                        }
                    }
                ]
            }
        }
